<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/consultar_pedido_activity"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingVertical="25dp"
    android:paddingHorizontal="5dp">

    <LinearLayout
        android:id="@+id/forms_consultar_pedido"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingVertical="35dp"
        android:paddingHorizontal="5dp">

        <TextView
            android:id="@+id/pedidoConsultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pedidoConsultar"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/userInputPedidoConsultar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="40dp">

            <TextView
                android:id="@+id/pedidoInfoCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/pedidoInfoEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/pedidoInfoRepartidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:onClick="consultar_pedido"
        android:background="@drawable/consultar"
        android:paddingHorizontal="35dp"
        android:layout_marginVertical="35dp"
        android:layout_marginHorizontal="5dp"
        android:tooltipText="Consultar"
        android:contentDescription="Consultar"/>

</LinearLayout>


